# Development Dockerfile
FROM node:20-alpine

WORKDIR /app

# Kopiere package files
COPY package.json package-lock.json* yarn.lock* pnpm-lock.yaml* ./

# Installiere Dependencies
RUN npm install

# Kopiere Source Code
COPY . .

# Expose Port 5173
EXPOSE 5173

# Start Vite Dev Server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]

